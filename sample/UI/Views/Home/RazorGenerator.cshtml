@model UI.Models.RazorGeneratorViewModel

@if (@Model.FormSubmit == true)
{
    <div class="text-center @Model.AlertClass" dir="rtl">@Model.FormMessage</div>
}
<div class="row">
    @using (Html.BeginForm("RazorGenerator", "Home", FormMethod.Post))
    {
        <div class="input-group mb-2">
            @Html.LabelFor(model => model.RazorAggregateGeneratorModel.AggregatePlural, new { @class = "input-group-text" })
            @Html.TextBoxFor(model => model.RazorAggregateGeneratorModel.AggregatePlural, new { @class = "form-control", placeholder = "AggregatePlural" })
            @Html.ValidationMessageFor(model => model.RazorAggregateGeneratorModel.AggregatePlural, "فیلد ضروری", new { @class = "text-danger" })
        </div>

        <div class="input-group mb-2">
            @Html.LabelFor(model => model.RazorAggregateGeneratorModel.AggregateName, new { @class = "input-group-text" })
            @Html.TextBoxFor(model => model.RazorAggregateGeneratorModel.AggregateName, new { @class = "form-control", placeholder = "AggregateName" })
            @Html.ValidationMessageFor(model => model.RazorAggregateGeneratorModel.AggregateName, "فیلد ضروری", new { @class = "text-danger" })
        </div>

        <div class="input-group mb-2">
            @Html.LabelFor(model => model.RazorAggregateGeneratorModel.ProjectName, "ProjectName", new { @class = "input-group-text", dir = "ltr" })
            @Html.TextBoxFor(model => model.RazorAggregateGeneratorModel.ProjectName, new { @class = "form-control", placeholder = "Example: in \"x.y.Core.ApplicationServices\" --> \"x.y.\" is projectName" })
            @* @Html.ValidationMessageFor(model => model.RazorAggregateGeneratorModel.ProjectName, "فیلد ضروری", new { @class = "text-danger" }) *@
        </div>

        <div class="input-group mb-2">
            @Html.LabelFor(model => model.RazorAggregateGeneratorModel.ProjectPath, new { @class = "input-group-text" })
            @Html.TextBoxFor(model => model.RazorAggregateGeneratorModel.ProjectPath, new { @class = "form-control", placeholder = "ProjectPath" })
            @Html.ValidationMessageFor(model => model.RazorAggregateGeneratorModel.ProjectPath, "فیلد ضروری", new { @class = "text-danger" })
        </div>
        
        <div class="input-group mb-2">
            @Html.LabelFor(model => model.RazorAggregateGeneratorModel.ModuleName, new { @class = "input-group-text" })
            @Html.TextBoxFor(model => model.RazorAggregateGeneratorModel.ModuleName, new { @class = "form-control", placeholder = "ModuleName" })
            @Html.ValidationMessageFor(model => model.RazorAggregateGeneratorModel.ModuleName, "فیلد ضروری", new { @class = "text-danger" })
        </div>

        <div class="col-12 bg-light p-2 mb-2">
            @Html.LabelFor(model => model.RazorAggregateGeneratorModel.AggregateClass, new { @class = "form-label" })
            @Html.TextAreaFor(model => model.RazorAggregateGeneratorModel.AggregateClass, new { @class = "form-control", placeholder = "AggregateClass", rows = 10 })
        </div>

        <div class="m-2 col-12 bg-light p-2 mb-2">
            <input type="submit" value="ثبت" class="btn btn-primary" />
        </div>
    }
</div>